<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/kuang_login_res"
        android:orientation="vertical">

        <TextView
            style="@style/text_color2"
            android:layout_width="match_parent"
            android:gravity="center"
            android:padding="10dp"
            android:text="回放时段" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/view_line"></View>

        <Button
            android:id="@+id/butToday"
            style="@style/text_color4"
            android:layout_width="match_parent"
            android:background="@null"
            android:text="今天" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/view_line"></View>

        <Button
            android:id="@+id/butYesterday"
            style="@style/text_color4"
            android:layout_width="match_parent"
            android:background="@null"
            android:text="昨天" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/view_line"></View>

        <Button
            android:id="@+id/butYesterday2"
            style="@style/text_color4"
            android:layout_width="match_parent"
            android:background="@null"
            android:text="前天" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/view_line"></View>

        <Button
            android:id="@+id/butCustom"
            style="@style/text_color4"
            android:layout_width="match_parent"
            android:background="@null"
            android:text="自定义" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/view_line"></View>

    <Button
        android:id="@+id/butHpCancel"
        style="@style/text_color4"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:background="@drawable/kuang_login_res"
        android:text="取消" />

</LinearLayout>
