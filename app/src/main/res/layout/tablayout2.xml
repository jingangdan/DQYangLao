<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.dq.yanglao.view.NoScrollViewPager
        android:id="@+id/tb_noScrollViewPage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tabLayout" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/grad2"
        app:tabIndicatorColor="@color/touming"
        app:tabSelectedTextColor="@color/main_color" />
    <!--app:tabIndicatorColor="@color/tv_color001"
    app:tabSelectedTextColor="@color/tv_color001"-->


</RelativeLayout>
