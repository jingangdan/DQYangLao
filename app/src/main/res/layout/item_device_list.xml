<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.dq.yanglao.view.SwipeView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:padding="@dimen/x15"
                android:id="@+id/itemLinDevice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/itemIvDevice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:src="@mipmap/ic_home_header" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/itemTvDevice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="设备" />

                    <TextView
                        android:id="@+id/itemTvCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="code" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:background="@color/main_color"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/itemButDeviceDefalt"
                    style="@style/text_color3"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:background="@null"
                    android:text="设为默认" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="fill_parent"
                    android:background="@color/bg1" />

                <Button
                    android:id="@+id/itemButDeviceDel"
                    style="@style/text_color3"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:background="@null"
                    android:text="删除" />

            </LinearLayout>

        </com.dq.yanglao.view.SwipeView>

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_line" />


</LinearLayout>
