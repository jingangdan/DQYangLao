<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/main_fl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/main_view_line" />

    <TextView
        android:id="@+id/main_view_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/main_ll_bottom"
        android:background="@color/view_line" />

    <LinearLayout
        android:id="@+id/main_ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:padding="3dp">

        <LinearLayout
            android:id="@+id/main_ll_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/main_iv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_fm_homepage001" />

            <TextView
                android:id="@+id/main_tv_1"
                style="@style/text_color2"
                android:layout_width="match_parent"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:text="首页"
                android:textSize="12dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_ll_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/main_iv_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_fm_healthy001" />

            <TextView
                android:id="@+id/main_tv_2"
                style="@style/text_color2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:text="健康"
                android:textSize="12dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_ll_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/main_iv_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_fm_location001" />

            <TextView
                android:id="@+id/main_tv_3"
                style="@style/text_color2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:text="定位"
                android:textSize="12dp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/main_ll_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/main_iv_4"
                android:layout_width="@dimen/x44"
                android:layout_height="@dimen/x44"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/main_tv_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x4"
                android:gravity="center"
                android:text="发现"
                android:textColor="@color/text_color2"
                android:textSize="@dimen/tv_24px" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_ll_5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/main_rl_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/main_iv_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_fm_me001" />

                <ImageView
                    android:id="@+id/main_iv_red_dot"
                    android:layout_width="@dimen/x21"
                    android:layout_height="@dimen/x21"
                    android:layout_alignRight="@+id/main_iv_5"
                    android:layout_alignTop="@id/main_iv_5"
                    android:src="@mipmap/ic_launcher"
                    android:visibility="gone" />
            </RelativeLayout>

            <TextView
                android:id="@+id/main_tv_5"
                style="@style/text_color2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:text="我的"
                android:textSize="12dp" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>