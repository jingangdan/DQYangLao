<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg1"
        android:orientation="horizontal"
        android:padding="@dimen/x20">

        <TextView
            style="@style/text_color1"
            android:layout_width="@dimen/x0"
            android:layout_weight="1"
            android:text="昵称：" />

        <TextView
            android:id="@+id/tvSettingName"
            android:layout_width="@dimen/x0"
            android:layout_height="wrap_content"
            android:layout_weight="5" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg1"
        android:orientation="horizontal"
        android:padding="@dimen/x20">

        <TextView
            style="@style/text_color1"
            android:layout_width="@dimen/x0"
            android:layout_weight="1"
            android:text="手机号：" />

        <TextView
            android:id="@+id/tvSettingMobile"
            android:layout_width="@dimen/x0"
            android:layout_height="wrap_content"
            android:layout_weight="5" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/x15">

        <Button
            android:id="@+id/butSettingOut"
            style="@style/text_color3"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@drawable/kuang_real_red"
            android:text="退出登录" />

    </LinearLayout>

</LinearLayout>
