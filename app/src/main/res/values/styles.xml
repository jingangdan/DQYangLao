<resources>

    Base application theme.

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--隐藏ActionBar-->
        <item name="windowActionBar">false</item>
        <!--隐藏标题-->
        <item name="windowNoTitle">true</item>

        <!--<item name="android:fitsSystemWindows">true</item>-->

    </style>

    <style name="TranslucentTheme" parent="AppTheme"></style>

    <!--字体颜色1 TV-->
    <style name="text_color1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_color1</item>
        <item name="android:textSize">14dp</item>
    </style>

    <!--字体颜色2 TV-->
    <style name="text_color2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_color2</item>
        <item name="android:textSize">14dp</item>
    </style>

    <!--字体颜色3 TV-->
    <style name="text_color3">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/bg1</item>
        <item name="android:textSize">16dp</item>
    </style>

    <!--字体颜色4 TV-->
    <style name="text_color4">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/main_color</item>
        <item name="android:textSize">14dp</item>
    </style>


    <!--字体颜色1 EV-->
    <style name="edit_color1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/main_color</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColorHint">@color/text_color2</item>
        <item name="android:background">@null</item>
    </style>

    <!--字体颜色2 EV-->
    <style name="edit_color2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/bg1</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColorHint">@color/bg1</item>
        <item name="android:background">@null</item>
    </style>

    <!--字体颜色3 EV-->
    <style name="edit_color3">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_color2</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColorHint">@color/text_color2</item>
        <item name="android:background">@null</item>
    </style>

    <style name="BottomDialog" parent="@style/Base.V7.Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="BottomDialog.Animation" parent="Animation.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/translate_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/translate_dialog_out</item>
    </style>

    <!---->
    <style name="style_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@android:color/transparent</item><!--背景透明-->
        <item name="android:backgroundDimEnabled">false</item><!--模糊-->
    </style>

    <!--图片样式-->
    <style name="img06">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleX">0.6</item>
        <item name="android:scaleY">0.6</item>
    </style>

</resources>
